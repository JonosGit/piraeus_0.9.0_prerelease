  <Globals>
    <StorageProviders>
      <Provider Name="store" ContainerName="orleans" Type="Orleans.Storage.AzureBlobStorage" DataConnectionString="[STORAGE_CONNECTION_STRING]" />
      <!-- <Provider Name="store" Type="Orleans.Storage.Redis.RedisStorageProvider" DataConnectionString="HOST.redis.cache.windows.net,ssl=True,password=PASSWORD"/> -->      
    </StorageProviders>
